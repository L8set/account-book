{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@component/atom/*": ["src/component/1_atom/*"],
      "@component/molecule/*": ["src/component/2_molecule/*"],
      "@component/organism/*": ["src/component/3_organism/*"],
      "@component/template/*": ["src/component/4_template/*"],
      "@component/page/*": ["src/component/5_page/*"],
      "@component/app/*": ["src/component/6_app/*"]
    }
  },
  "include": ["./src"]
}
